<% content_for :title, "Dicty12: Registration" %>

<h3>Registration Form</h3>
<p>Please enter the details below</p>

<%= form_for "register" do |atnd| %>
	<table>
       	<tr>
			<td> First Name: </td><td><%= atnd.text_field :firstname %></td>
		</tr>
		<tr>
			<td> Last name: </td><td><%= atnd.text_field :lastname %></td>
		</tr>
		<tr>
			<td> Institution:</td><td><%= atnd.text_field :institute %></td>
		</tr>
		<tr>
			<td> Address: </td><td>  <%= atnd.text_field :address %></td>
		</tr>
		<tr>
			<td> City:</td><td><%= atnd.text_field :city %></td>
		</tr>
		<tr>
			<td> Zip code: </td><td>  <%= atnd.text_field :zip %></td>
		</tr>
		<tr>
			<td> Country:</td><td> <%= atnd.text_field :country %></td>
		</tr>
		<tr>
			<td> Email:</td><td> <%= atnd.text_field :email %></td>
		</tr>
		<tr>
			<td> Phone number:</td><td> <%= atnd.text_field :phone %></td>
		</tr>
		<tr>
			<td> Passport #: </td><td>  <%= atnd.text_field :passport %></td>
		</tr>
		
		<!--<%# [ 'single_use', 'double_use' ].each do |acc_type| %>
